{
  "name": "@ghost-sdk/testing",
  "version": "1.0.0",
  "description": "Testing utilities and framework for Ghost SDK",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "keywords": [
    "ghost",
    "privacy",
    "solana",
    "testing",
    "zk-snark",
    "monero",
    "zcash"
  ],
  "dependencies": {
    "@ghost-sdk/core": "workspace:*",
    "@ghost-sdk/monero": "workspace:*",
    "@ghost-sdk/zcash": "workspace:*",
    "@ghost-sdk/integrations": "workspace:*",
    "@solana/web3.js": "^1.87.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@solana/web3.js": "^1.87.0"
  }
}
